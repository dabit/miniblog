<%= div_for post, class: "row" do %>
  <div class="col-sm-8"><h4><%= post.title %></h4></div>
  <div class="visible-xs col-xs-11 col-xs-offset-1">
    <div class="col-xs-3"><%= link_to 'Edit', miniblog.edit_admin_post_path(post), class: "btn btn-default" %></div>
    <div class="col-xs-3"><%= link_to 'Delete', miniblog.admin_post_path(post), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?"} %></div>
    <div class="col-xs-3"><%= link_to 'Publish', miniblog.admin_post_path(post), class: "btn btn-default" %></div>
  </div>
  <div class="hidden-xs">
    <div class="col-sm-2"><%= link_to 'Edit', miniblog.edit_admin_post_path(post), class: "btn btn-default" %></div>
    <div class="col-sm-2"><%= link_to 'Delete', miniblog.admin_post_path(post), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?"} %></div>
    <div class="col-xs-3"><%= link_to 'Publish', miniblog.admin_post_path(post), class: "btn btn-default" %></div>
  </div>
<% end %>
